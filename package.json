{
    "name": "teletrade",
    "version": "1.0.0",
    "description": "White-label Telegram subscription automation platform with crypto payments",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:main-bot": "tsx watch src/main-bot/index.ts",
        "dev:selling-bot": "tsx watch src/selling-bot/index.ts",
        "dev:backend": "tsx watch src/backend/index.ts",
        "dev": "concurrently \"npm:dev:*\"",
        "build": "tsc",
        "start:main-bot": "node dist/main-bot/index.js",
        "start:selling-bot": "node dist/selling-bot/index.js",
        "start:backend": "node dist/backend/index.js",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.0",
        "@fastify/rate-limit": "^10.3.0",
        "@grammyjs/conversations": "^1.2.0",
        "@grammyjs/menu": "^1.2.1",
        "@grammyjs/ratelimiter": "^1.2.1",
        "@grammyjs/runner": "^2.0.3",
        "@sentry/nextjs": "^10.38.0",
        "@sentry/node": "^10.38.0",
        "@sentry/profiling-node": "^10.38.0",
        "@supabase/supabase-js": "^2.39.0",
        "dotenv": "^16.4.0",
        "fastify": "^4.26.0",
        "grammy": "^1.21.0",
        "ky": "^1.2.0",
        "node-cron": "^3.0.3",
        "pino": "^8.18.0",
        "pino-pretty": "^10.3.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.16.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "concurrently": "^8.2.0",
        "eslint": "^8.56.0",
        "pg": "^8.17.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vitest": "^1.6.1"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
