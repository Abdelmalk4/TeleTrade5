# =================================
# TeleTrade Environment Configuration
# =================================
# Copy this file to .env and fill in your values

# ---------------------------------
# Supabase Configuration
# ---------------------------------
# Get these from: Supabase Dashboard → Project Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# Get from: Supabase Dashboard → Project Settings → Database → Connection String (Transaction mode)
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# ---------------------------------
# Main Bot Configuration
# ---------------------------------
MAIN_BOT_TOKEN=your-main-bot-token-from-botfather

# Platform admin Telegram user IDs (comma-separated)
PLATFORM_ADMIN_IDS=123456789,987654321

# ---------------------------------
# Selling Bot Configuration
# ---------------------------------
# Note: Each selling bot token is stored in the database per client
# This is the webhook base URL for receiving updates
SELLING_BOT_WEBHOOK_BASE_URL=https://your-railway-app.up.railway.app

# ---------------------------------
# NOWPayments Configuration
# ---------------------------------
# Note: Client API keys are stored per client in database
# This is the IPN callback URL for payment webhooks
NOWPAYMENTS_IPN_CALLBACK_URL=https://your-railway-app.up.railway.app/webhooks/nowpayments

# IPN secret for signature validation
NOWPAYMENTS_IPN_SECRET=your-ipn-secret

# ---------------------------------
# Platform Configuration
# ---------------------------------
PLATFORM_NAME=TeleTrade
PLATFORM_FOOTER_TEXT=Powered by TeleTrade

# Trial duration in days
TRIAL_DURATION_DAYS=7

# Grace period after subscription expires (days)
GRACE_PERIOD_DAYS=3

# ---------------------------------
# Logging & Environment
# ---------------------------------
NODE_ENV=development
LOG_LEVEL=info
